<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>Ghissu - Academic Portal</title>
  
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
  
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">

  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500&display=swap" rel="stylesheet">
  
  <style>
    /* All your custom styles go here... */
    body {
      font-family: 'Poppins', sans-serif;
    }
    .dropdown-submenu {
      position: relative;
    }
    .dropdown-submenu > .dropdown-menu {
      top: 0;
      left: 100%;
    }
    .dropdown-submenu:hover > .dropdown-menu {
      display: block;
    }
    .dropdown-toggle::after {
      display: none !important;
    }
    .dropdown-item:hover {
      font-weight: 500;
    }
    .nav-link:focus, .btn:focus {
      outline: none !important;
      box-shadow: none !important;
    }
    .navbar .nav-item .nav-link.active {
      font-weight: 500;
      color: #0d6efd !important;
    }
    .dropdown-menu {
      border: none;
      box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15);
    }
    .navbar-logo {
    height: 40px; /* Adjust this value to make your logo bigger or smaller */
    width: auto;
    }
  </style>
</head>
<body>

<nav class="navbar navbar-expand-lg navbar-light bg-light">
  <div class="container-fluid">
    <a href="/" class="navbar-brand">
    <img src="/images/glass.jpg" alt="Ghissu Logo" class="navbar-logo">
    </a>

    <ul class="navbar-nav me-auto">
      <li class="nav-item dropdown">
        <a href="#" class="nav-link dropdown-toggle" data-bs-toggle="dropdown">Courses</a>
        <ul class="dropdown-menu">
          <% if (typeof courses !== 'undefined' && courses.length > 0) { %>
            <% courses.forEach(course => { %>
              <li class="dropdown-submenu">
                <a class="dropdown-item dropdown-toggle" href="#"><%= course.name %></a>
                <ul class="dropdown-menu">
                  <% course.semesters.forEach(semester => { %>
                    <li class="dropdown-submenu">
                      <a class="dropdown-item dropdown-toggle" href="#">Semester <%= semester.semester_num %></a>
                      <ul class="dropdown-menu">
                        <% semester.courseTypes.forEach(courseType => { %>
                          <li>
                            <a class="dropdown-item" href="/semester/<%= semester.id %>/coursetype/<%= courseType.id %>">
                              <%= courseType.name %>
                            </a>
                          </li>
                        <% }) %>
                      </ul>
                    </li>
                  <% }) %>
                </ul>
              </li>
            <% }) %>
          <% } %>
        </ul>
      </li>
    </ul>

    <form class="d-flex mx-auto" action="/search" method="GET" style="min-width: 300px;">
      <input class="form-control me-2" type="search" name="query" placeholder="Search Subjects" aria-label="Search" required>
      <button class="btn btn-outline-primary" type="submit">
        <i class="bi bi-search"></i>
      </button>
    </form>

    <ul class="navbar-nav">
      <li class="nav-item">
        <a class="nav-link <%= activePage === 'upload' ? 'active' : '' %>" href="/upload">Upload</a>
      </li>
      <li class="nav-item">
        <a class="nav-link <%= activePage === 'feedback' ? 'active' : '' %>" href="/feedback">Feedback</a>
      </li>
      <li class="nav-item">
        <a class="nav-link <%= activePage === 'queries' ? 'active' : '' %>" href="/queries">Queries</a>
      </li>
    </ul>
  </div>
</nav>