<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>Ghissu - Home</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600&display=swap" rel="stylesheet">
  
  <style>
    body {
      font-family: 'Poppins', sans-serif;
    }
    /* --- NAVBAR STYLES --- */
    .dropdown-submenu { position: relative; }
    .dropdown-submenu > .dropdown-menu { top: 0; left: 100%; }
    .dropdown-submenu:hover > .dropdown-menu { display: block; }
    .dropdown-toggle::after { display: none !important; }
    .dropdown-item:hover { font-weight: 500; }
    .nav-link:focus, .btn:focus { outline: none !important; box-shadow: none !important; }
    .navbar .nav-item .nav-link.active { font-weight: 500; color: #0d6efd !important; }
    .dropdown-menu { border: none; }
    .search-image-button { height: 38px; width: auto; border-radius: .25rem; border: none; }

    /* --- LAYOUT & CALCULATOR STYLES --- */
    .main-content {
      padding-top: 4rem;
    }
    .gpa-calculator {
      padding: 1.5rem;
      background-color: #f8f9fa;
      border-radius: 0.5rem;
      box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.1);
    }
    .subject-row {
      display: flex;
      align-items: center;
      gap: 0.5rem;
      margin-bottom: 1rem;
    }
    .subject-row .form-control, .subject-row .form-label {
      flex: 1;
    }
    .course-label {
        flex: 0 0 80px;
        font-weight: 500;
    }
    .result-box {
      font-size: 1.25rem;
      font-weight: 600;
    }
    .delete-btn {
      flex: 0 0 auto;
    }
  </style>
</head>
<body>
<nav class="navbar navbar-expand-lg navbar-light bg-light">
  <div class="container-fluid">
    <a href="/" class="navbar-brand ms-2">
        <img src="/images/Hyper.png" alt="Ghissu Logo" style="height: 45px;">
   </a>
    
    <ul class="navbar-nav me-auto">
      <li class="nav-item dropdown">
        <a href="#" class="nav-link dropdown-toggle" data-bs-toggle="dropdown">Courses</a>
        <ul class="dropdown-menu">
            <% courses.forEach(course => { %>
              <li class="dropdown-submenu">
                <a class="dropdown-item dropdown-toggle" href="#"><%= course.name %></a>
                <ul class="dropdown-menu">
                  <% course.semesters.forEach(semester => { %>
                    <li class="dropdown-submenu">
                      <a class="dropdown-item dropdown-toggle" href="#">Semester <%= semester.semester_num %></a>
                      <ul class="dropdown-menu">
                        <% semester.courseTypes.forEach(courseType => { %>
                          <li>
                            <a class="dropdown-item" href="/semester/<%= semester.id %>/coursetype/<%= courseType.id %>">
                              <%= courseType.name %>
                            </a>
                          </li>
                        <% }) %>
                      </ul>
                    </li>
                  <% }) %>
                </ul>
              </li>
            <% }) %>
          </ul>
      </li>
    </ul>
    <form class="d-flex mx-auto align-items-center" action="/search" method="GET">
      <input class="form-control me-2" type="search" name="query" placeholder="Search Courses" aria-label="Search" required>
      <input 
        type="image" 
        src="/images/glass.jpg" 
        alt="Search" 
        class="search-image-button"
      >
    </form>
    <ul class="navbar-nav">
      <li class="nav-item">
        <a class="nav-link <%= activePage === 'upload' ? 'active' : '' %>" href="/upload">Upload</a>
      </li>
      <li class="nav-item">
        <a class="nav-link <%= activePage === 'feedback' ? 'active' : '' %>" href="/feedback">Feedback</a>
      </li>
      <li class="nav-item">
        <a class="nav-link <%= activePage === 'queries' ? 'active' : '' %>" href="/queries">Queries</a>
      </li>
    </ul>
  </div>
</nav>

<div class="container main-content">
  <div class="row">
    <div class="col-md-5 offset-md-7">
      <div class="gpa-calculator">
        <h4 class="text-center mb-3">SGPA Calculator</h4>
        <div id="subjects-container">
          <div class="subject-row">
            <label class="course-label">Course 1</label>
            <input type="number" class="form-control" placeholder="Points" min="0" max="10" step="0.1" required>
            <input type="number" class="form-control" placeholder="Credits" min="1" required>
          </div>
        </div>
        <div class="d-flex justify-content-between mt-3">
          <button class="btn btn-sm btn-secondary" id="add-subject-btn">+ Add Course</button>
          <button class="btn btn-sm btn-primary" id="calculate-btn">Calculate</button>
        </div>
        <div class="mt-3 text-center">
          <h6 class="mb-1">Your Semester GPA (SGPA) is:</h6>
          <div id="result" class="result-box text-success">0.00</div>
        </div>
      </div>
    </div>
  </div>
</div>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    // --- Script for Navbar Dropdowns ---
    const submenuToggles = document.querySelectorAll('.dropdown-submenu > .dropdown-toggle');
    submenuToggles.forEach(function(toggle) {
      toggle.addEventListener('click', function(event) {
        event.stopPropagation();
      });
    });

    // --- Script for GPA Calculator ---
    const subjectsContainer = document.getElementById('subjects-container');
    const addSubjectBtn = document.getElementById('add-subject-btn');
    const calculateBtn = document.getElementById('calculate-btn');
    const resultDiv = document.getElementById('result');
    let courseCounter = 1;

    // ADD A NEW COURSE ROW
    addSubjectBtn.addEventListener('click', function() {
      courseCounter++;
      const newRow = document.createElement('div');
      newRow.className = 'subject-row';
      newRow.innerHTML = `
        <label class="course-label">Course ${courseCounter}</label>
        <input type="number" class="form-control" placeholder="Points" min="0" max="10" step="0.1" required>
        <input type="number" class="form-control" placeholder="Credits" min="1" required>
        <button class="btn btn-sm btn-danger delete-btn">
          <i class="bi bi-trash"></i>
        </button>
      `;
      subjectsContainer.appendChild(newRow);
    });
    
    // HANDLE DELETING A COURSE ROW
    subjectsContainer.addEventListener('click', function(event) {
      const deleteButton = event.target.closest('.delete-btn');
      if (deleteButton) {
        deleteButton.closest('.subject-row').remove();
      }
    });

    // CALCULATE THE GPA
    calculateBtn.addEventListener('click', function() {
      const subjectRows = subjectsContainer.querySelectorAll('.subject-row');
      let totalPoints = 0;
      let totalCredits = 0;
      let allFieldsValid = true;

      subjectRows.forEach(row => {
        const gradeInput = row.querySelectorAll('input[type="number"]')[0];
        const creditInput = row.querySelectorAll('input[type="number"]')[1];
        
        const gradeValue = parseFloat(gradeInput.value);
        const creditValue = parseFloat(creditInput.value);

        if (!isNaN(gradeValue) && gradeValue >= 0 && gradeValue <= 10 && !isNaN(creditValue) && creditValue > 0) {
          totalPoints += gradeValue * creditValue;
          totalCredits += creditValue;
        } else {
          allFieldsValid = false;
        }
      });

      if (!allFieldsValid || totalCredits === 0) {
        resultDiv.textContent = 'Invalid Input';
        resultDiv.classList.remove('text-success');
        resultDiv.classList.add('text-danger');
        return;
      }
      
      const sgpa = totalPoints / totalCredits;
      resultDiv.textContent = sgpa.toFixed(2);
      resultDiv.classList.remove('text-danger');
      resultDiv.classList.add('text-success');
    });
  });
</script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

</body>
</html>