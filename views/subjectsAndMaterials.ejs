<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title><%= pageData.courseTypeName %> Subjects</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500&display=swap" rel="stylesheet">
  <style>
  body { 
    font-family: 'Poppins', sans-serif; 
  }
  .list-group-item.active {
    background-color: #0d6efd;
    border-color: #0d6efd;
  }
  .full-height-row {
      min-height: 75vh;
  }
  
  /* --- CORRECTED CSS FOR SYMMETRY --- */
  #materials-display {
    /* These 3 lines perfectly center the initial text */
    display: flex;
    align-items: center;
    justify-content: center;
    
    height: 100%; /* Make sure the container takes up the full height */
    padding-left: 1.5rem; 
  }
</style>
</head>
<body>
  <div class="container my-5">
    <h1 class="mb-4">
      <%= pageData.courseTypeName %> Courses - Semester <%= pageData.semesterNum %>
    </h1>

    <div class="row full-height-row">
      <div class="col-md-4 border-end">
        <div class="list-group" id="subject-list">
          <% pageData.subjects.forEach(subject => { %>
            <a href="#" 
               class="list-group-item list-group-item-action subject-link" 
               data-materials='<%- JSON.stringify(subject.materials) %>'>
              <%= subject.name %>
            </a>
          <% }) %>
        </div>
      </div>

      <div class="col-md-8">
        <div id="materials-display">
          <div class="d-flex align-items-center justify-content-center h-100 text-muted">
            <p>Please select a subject from the left to view its materials.</p>
          </div>
        </div>
      </div>
    </div>

    <a href="/" class="btn btn-outline-primary mt-3">‚Üê Back to Home</a>
  </div>

  <script>
    document.addEventListener('DOMContentLoaded', function() {
      const subjectLinks = document.querySelectorAll('.subject-link');
      const materialsDisplay = document.getElementById('materials-display');

      subjectLinks.forEach(link => {
        link.addEventListener('click', function(event) {
          event.preventDefault(); // Stop the link from navigating

          // Remove 'active' class from any previously selected subject
          const currentActive = document.querySelector('.subject-link.active');
          if (currentActive) {
            currentActive.classList.remove('active');
          }
          // Add 'active' class to the clicked subject
          this.classList.add('active');

          // Get the materials data stored in the 'data-materials' attribute
          const materials = JSON.parse(this.dataset.materials);
          
          // Clear the right-hand side
          materialsDisplay.innerHTML = '';

          if (materials.length === 0) {
            materialsDisplay.innerHTML = `
              <div class="d-flex align-items-center justify-content-center h-100 text-muted">
                <p>No materials have been uploaded for this subject yet.</p>
              </div>`;
          } else {
            // Build the HTML for the list of materials
            let materialsHtml = '<ul class="list-group">';
            materials.forEach(material => {
              materialsHtml += `
                <li class="list-group-item">
                  <a href="/uploads/${material.filename}" download>
                    ${material.title}
                  </a>
                </li>`;
            });
            materialsHtml += '</ul>';
            materialsDisplay.innerHTML = materialsHtml;
          }
        });
      });
    });
  </script>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>